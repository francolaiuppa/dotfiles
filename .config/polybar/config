tcyan = #808ec07c
twhite = #80ebdbb2
tgrey = #80a89984


[global/wm]
margin-top = 5
margin-bottom = 5

[bar/top]
width = 100%
height = 50
offset-x = 0
offset-y = 0

locale = en_US.UTF-8

#background = ${colors.tblack}
background = #44000000
foreground = ${colors.foreground}

font-0 = Knack Nerd Font:pixelsize=20:weight=Bold;0

#modules-left = i3 xwindow
modules-left = i3
modules-center = music
modules-right = volumeintel temperature weather battery network date

tray-position =
tray-padding = 2
tray-background = ${colors.tblack}
tray-transparent = true

#underline-size = 3

spacing = 1
padding-left = 0
padding-right = 2
module-margin-left = 1
module-margin-right = 1

[module/xwindow]
type = internal/xwindow
label = %title:0:30:...%

[module/i3]
type = internal/i3
strip-wsnumbers = true

ws-icon-0 = 1;
ws-icon-1 = 2;
ws-icon-2 = 3;
ws-icon-3 = 4;
ws-icon-4 = 5;

format = <label-state> <label-mode>

label-focused = %icon%
label-unfocused = %icon%

label-mode-foreground = ${colors.background}
label-mode-background = ${colors.dyellow}
label-mode-padding = 1

label-focused-foreground = ${colors.background}
label-focused-background = ${colors.dyellow}
label-focused-underline = ${colors.yellow}
label-focused-padding = 1

label-unfocused-padding = 1

label-urgent-background = ${colors.tred}
label-urgent-underline = ${colors.dred}
label-urgent-padding = 1

label-visible-background = ${colors.tgreen}
label-visible-underline = ${colors.dgreen}
label-visible-padding = 1

[module/backlight]
type = internal/backlight
card = intel_backlight
format = <label>
format-background = ${colors.tyellow}
format-underline = ${colors.dyellow}
format-padding = 2
label =   %percentage%

[module/music]
type = custom/script
interval = 2

label-foreground = ${colors.foreground}
label = %output:0:80:...%
exec = ~/.config/polybar/mpris.sh

[module/spotify]
type = custom/script
exec = BLOCK_INSTANCE=spotify $HOME/.bin/mediaplayer
label =   %output:0:30:...%
format-foreground = #aacf00
format-background = #80aacf00
format-underline = #aacf00
format-padding = 2
interval = 5
exec-if = pgrep -x spotify

[module/volumeintel]
type = internal/volume
format-volume = <ramp-volume><label-volume>
master-mixer = Master
label-muted =  muted

ramp-volume-0 = 
ramp-volume-1 = 
ramp-volume-2 = 
#format-volume-underline = ${colors.dgreen}
format-volume-padding = 1
mapping = true
#format-volume-background = ${colors.tgreen}

[module/volumeasus]
type = internal/volume
format-volume = <label-volume>
master-mixer = PCM
label-muted =  muted

label-volume =  %percentage%
#format-volume-underline = ${colors.dgreen}
format-volume-padding = 2
mapping = true
format-volume-background = ${colors.tgreen}

[module/weather]
type = custom/script
interval = 10
format = <label>
#format-underline = #f50a4d
format-prefix = " "
format-prefix-foreground = ${colors.foreground}
exec = ~/.config/polybar/weather.py

[module/temperature]
type = internal/temperature
thermal-zone = 10
warn-temperature = 60

format = <ramp><label>
format-underline = #f50a4d
format-warn = <ramp><label-warn>
format-warn-underline = ${self.format-underline}

label = %temperature%
label-warn = %temperature%
label-warn-foreground = ${colors.dyellow}

ramp-0 = 
ramp-1 = 
ramp-2 = 
#ramp-foreground = ${colors.yellow}

[module/date]
type = internal/date
interval = 2

date = "%Y-%m-%d"
date-alt = "  %A, %d. %B"

time = "%H:%M"
time-alt = "%H:%M:%S"

#format-underline = ${colors.dcyan}
format-padding = 1
label = "%{A3:gsimplecal:}%date% | %time%%{A}"

#format-background = ${colors.tcyan}

[module/network]
type = internal/network
interface = wlp6s0

format-connected = <label-connected>

; Available tags:
;   <label-disconnected> (default)
format-disconnected = <label-disconnected>

; Available tags:
;   <label-connected> (default)
;   <label-packetloss>
;   <animation-packetloss>
format-packetloss = <animation-packetloss> <label-connected>

; Available tokens:
;   %ifname%    [wireless+wired]
;   %local_ip%  [wireless+wired]
;   %essid%     [wireless]
;   %signal%    [wireless]
;   %upspeed%   [wireless+wired]
;   %downspeed% [wireless+wired]
;   %linkspeed% [wired]
; Default: %ifname% %local_ip%
label-connected = 
label-connected-foreground = ${colors.foreground}

; Available tokens:
;   %ifname%    [wireless+wired]
; Default: (none)
label-disconnected = 
label-disconnected-foreground = ${colors.tred}

[module/battery]
type = internal/battery
battery = BAT1
adapter = ACAD
full-at = 95

format-charging = <animation-charging><label-charging>

format-discharging = <ramp-capacity><label-discharging>
#label-discharging = %percentage%% (%time%)
label-discharging = %percentage%%

label-full = 
#format-full-prefix = 
#format-underline = ${colors.dblue}
format-padding = 2

ramp-capacity-0 = 
ramp-capacity-1 = 
ramp-capacity-2 = 
ramp-capacity-3 = 
ramp-capacity-4 = 

animation-charging-0 = 
animation-charging-1 = 
animation-charging-2 = 
animation-charging-3 = 
animation-charging-4 = 

animation-charging-framerate = 750

format-background = ${colors.tblue}

